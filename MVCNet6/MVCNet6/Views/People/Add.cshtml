@model MVCNet6.Service.Requests.CreatePeopleRequest

@{
    ViewData["Title"] = "Add new person";
}
<div>
    <h1 class="display-6 col-8 offset-2">Create New Person</h1>
    <form asp-controller="People" asp-action="Add" method="post" class="col-8 offset-2">
        <div class="form-group">
            <label asp-for="@Model.Id"></label>
            <input asp-for="@Model.Id" class="form-control" placeholder="">
            <span asp-validation-for="@Model.Id" class="form-text text-dangger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="">
            <span asp-validation-for="FirstName" class="form-text text-dangger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" placeholder="">
            <span asp-validation-for="LastName" class="form-text text-dangger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control">
                <option value="Male">Male</option>
                <option value="FeMale">FeMale</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="form-text text-dangger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="">
            <span asp-validation-for="DateOfBirth" class="form-text text-dangger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class=" form-control" placeholder="">
            <span asp-validation-for="PhoneNumber" class="form-text text-dangger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BirthPlace"></label>
            <input asp-for="BirthPlace" class="form-control" placeholder="">
            <span asp-validation-for="BirthPlace" class="form-text text-dangger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Submit</button>
        <button type="submit" class="btn btn-secondary mt-2" asp-action="Index">Back To List</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }