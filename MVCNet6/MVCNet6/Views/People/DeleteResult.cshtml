@{
    ViewData["Title"] = "Delete result screen";
    var deletedPersonName = ViewBag.DeletedPersonName;
}

<h2 class="display-4 text-center text-info">
    Person @deletedPersonName was removed from the list successfully!
</h2>
<a type="submit" class="btn btn-secondary" role="button" asp-controller="People" asp-action="Index">
    Back
    to list
</a>