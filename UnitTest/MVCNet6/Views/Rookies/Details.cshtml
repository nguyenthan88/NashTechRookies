@model PersonDetailsModel

@{
    ViewData["Title"] = "Person infomation";
    var value = ViewData["Index"]?.ToString() ?? "";
    var index = !string.IsNullOrEmpty(value) ? int.Parse(value) : 0;
}

<h1 class="display-4 text-center">Person Information</h1>
<div>
    <div class="display-6">
        <form asp-controller="Rookies" asp-action="Update" asp-route-index="@index" method="post" class="col-12">
            <div class="form-group">
                <label asp-for="LastName"></label>
                <label class="form-control">@Model.LastName</label>
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <label class="form-control">@Model.FirstName</label>
            </div>

            <div class="form-group">
                <label asp-for="Gender"></label>
                <label class="form-control">@Model.Gender</label>
            </div>

            <div class="form-group">
                <label asp-for="DateOfBirth"></label>
                <label class="form-control">@Model.DateOfBirth</label>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <label class="form-control">@Model.PhoneNumber</label>
            </div>

            <div class="form-group">
                <label asp-for="BirthPlace"></label>
                <label class="form-control">@Model.BirthPlace</label>
            </div>

            <div class="form-group">
                <a type="submit" class="btn btn-secondary" role="button" asp-controller="Rookies"
                    asp-action="Index">Back
                    to list</a>
                <a class="btn btn-danger" href="#" role="button" data-toggle="modal"
                    data-target="#exampleModal">Delete</a>
            </div>
        </form>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="Rookies" asp-action="DeleteAndRedirectToResultView" asp-route-index="@index"
                method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>