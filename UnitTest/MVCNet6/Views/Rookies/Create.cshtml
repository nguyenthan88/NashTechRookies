@model PersonCreateModel

@{

    ViewData["Title"] = "Create new person";
}

<h1 class="display-4 text-center">Create new person</h1>
<div>
    <div class="display-6">
        <form asp-controller="Rookies" asp-action="Create" method="post" class="col-12">
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Your last name">
                <span asp-validation-for="LastName" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Your first name">
                <span asp-validation-for="FirstName" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender"></label>
                <select class="form-control" asp-for="Gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Your date of birth">
                <span asp-validation-for="DateOfBirth" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Your phone number">
                <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthPlace"></label>
                <input asp-for="BirthPlace" type="text" class="form-control" placeholder="Your birth place">
                <span asp-validation-for="BirthPlace" class="form-text text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a type="submit" class="btn btn-danger" role="button" asp-controller="Rookies" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>